{
    "namespace": "asa_music_player_content",

    "asa_music_player_selected": {
        "type": "stack_panel",
        "size": [ "100% - 2px", "100%c" ],
        "controls": [
            {
                "@asa_font_setup.text_and_background": {
                    "$header_text": "Anime Music",
                    "size": [ "100%", 20 ]
                }
            },
            {
                "panel": { "type": "panel", "size": [ 1, 1 ]}
            },
            {
                "music_stack_1": {
                    "type": "stack_panel",
                    "size": [ "100%", "100%cm" ],
                    "orientation": "horizontal",
                    "controls": [
                        {
                            "@asa_music_button_common.asa_main_menu_selected": {
                                "size": [ "50% - 0.5px", 30 ],
                                "$asa_button_text": "Date a Live",
                                "$asa_music_player_icon": "asa_textures/music_player_thumbnail/music_player_selected_icon/date_a_live",
                                "$asa_toggle_name": "asa_date_a_live",
            
                                "$asa_selected_bindings": "asa_music_player_date_a_live"
                            }
                        },
                        {
                            "panel": { "type": "panel", "size": [ 1, 1 ]}
                        },
                        {
                            "@asa_music_button_common.asa_main_menu_selected": {
                                "size": [ "50% - 0.5px", 30 ],
                                "$asa_button_text": "Masamune-kun's Revenge",
                                "$asa_music_player_icon": "asa_textures/music_player_thumbnail/music_player_selected_icon/masamune_revenge",
                                "$asa_toggle_name": "asa_masamune_revenge",
            
                                "$asa_selected_bindings": "asa_music_player_masamune_revenge"
                            }
                        }
                    ]
                }
            },
            {
                "panel": { "type": "panel", "size": [ 1, 1 ]}
            },
            {
                "@asa_font_setup.text_and_background": {
                    "$header_text": "Default Music",
                    "size": [ "100%", 20 ]
                }
            },
            {
                "panel": { "type": "panel", "size": [ 1, 1 ]}
            },
            {
                "music_stack_2": {
                    "type": "stack_panel",
                    "size": [ "100%", "100%cm" ],
                    "orientation": "horizontal",
                    "controls": [
                        {
                            "@asa_music_button_common.asa_main_menu_selected": {
                                "size": [ "100%", 30 ],
                                "$asa_button_text": "Custom Music (Total: 30)",
                                "$asa_music_player_icon": "textures/blocks/jukebox_top",
                                "$asa_toggle_name": "asa_custom_music",
            
                                "$asa_selected_bindings": "asa_music_player_custom_music"
                            }
                        }
                    ]
                }
            }
        ]
    }
}