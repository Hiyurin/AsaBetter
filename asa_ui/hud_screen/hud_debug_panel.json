        "texture": "textures/ui/Black",
        "alpha": 0.5,
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "asa_input",
                "source_property_name": "#toggle_state",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "touch": {
                    "type": "label",
                    "layer": 10,
                    "size": [ "default", "default" ],
                    "text": "Input: Touch",
                    "shadow": false,
                    "font_type": "smooth",
                    "bindings": [
                        {
                            "binding_condition": "always",
                            "binding_name": "#inventory_touch_button",
                            "binding_name_override": "#visible",
                            "binding_type": "global"
                        }
                    ]
                }
            },
            {
                "keyboard_and_mouse": {
                    "type": "label",
                    "layer": 10,
                    "size": [ "default", "default" ],
                    "text": "Input: Keyboard and Mouse",
