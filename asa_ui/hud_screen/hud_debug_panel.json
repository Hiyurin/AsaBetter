    //Stack
    "asa_debug_stack": {
        "type": "stack_panel",
        "size": [ "100%cm", "100%c" ],
        "anchor_from": "bottom_left",
        "anchor_to": "bottom_left",
        "controls": [
            {
                "device@device_debug": {}
            },
            /*{
                "up_pro@ui_profile_debug": {}
            },*/
            {
                "gamemode@gamemode_debug": {}
            },
            {
                "gamemode@input_debug": {}
