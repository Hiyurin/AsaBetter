{
    "namespace": "asa_resouce_packs_screen",

    "asa_resource_pack_screen": {
        "type": "stack_panel",
        "size": [ "100%", "100%c" ],
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "global_texture_pack_button_toggle",
                "source_property_name": "#toggle_state",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "panel": {
                    "type": "panel",
                    "size": [ 1, 1 ]
                }
            },
            {
                "rsp_panel": {
                    "type": "stack_panel",
                    "size": [ "100% - 1px", "100%c" ],
                    "controls": [
                        {
                            "rsp_panel": {
                                "type": "stack_panel",
                                "size": [ "100%", "100%c" ],
                                "bindings": [
                                    {
                                        "binding_type": "view",
                                        "source_control_name": "global_rsp_ac",
                                        "source_property_name": "#toggle_state",
                                        "target_property_name": "#visible"
                                    }
                                ],
                                "controls": [
                                    {
                                        "asa_rsp_available@asa_resource_packs.selected_pack_grid": {}
                                    },
                                    {
                                        "asa_minecraft_default": {
                                            "type": "stack_panel",
                                            "orientation": "horizontal",
                                            "size": [ "100%", "100%cm" ],
                                            "controls": [
                                                {
                                                    "asa_minecraft_default_image": {
                                                        "type": "image",
                                                        "size": [ 40, 40 ],
                                                        "texture_file_system": "#icon_file_system",
                                                        "bindings": [
                                                            {
                                                                "binding_name": "#default_item_texture_global",
                                                                "binding_name_override": "#texture"
                                                            },
                                                            {
                                                                "binding_name": "#default_item_file_system_global",
                                                                "binding_name_override": "#texture_file_system"
                                                            },
                                                            {
                                                                "binding_name": "#default_item_zip_global",
                                                                "binding_name_override": "#zip_folder"
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "panel": {
                                                        "type": "panel",
                                                        "size": [ 2, 2 ]
                                                    }
                                                },
                                                {
                                                    "asa_pack_name_stack": {
                                                        "type": "stack_panel",
                                                        "size": [ "100% - 42px", "100%c" ],
                                                        "controls": [
                                                            {
                                                                "white_label@resource_packs.white_label": {
                                                                    "text": "resourcePack.vanilla.name",
                                                                    "max_size": [ "100%", "default" ],
                                                                    "layer": 1
                                                                }
                                                            },
                                                            {
                                                                "white_label@resource_packs.white_label": {
                                                                    "layer": 1,
                                                                    "color": [ 0.8, 0.8, 0.8 ],
                                                                    "max_size": [ "100%", "default" ],
                                                                    "text": "resourcePack.vanilla.description",
                                                                    "font_type": "smooth"
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "panel": {
                                            "type": "panel",
                                            "size": [ 1, 1 ]
                                        }
                                    },
                                    {
                                        "@asa_mega_mod_menu.asa_menu_space_line": {}
                                    },
                                    {
                                        "panel": {
                                            "type": "panel",
                                            "size": [ 2, 2 ]
                                        }
                                    },
                                    {
                                        "white_label@resource_packs.white_label": {
                                            "text": "resourcePack.description.bottom.global",
                                            "max_size": [ "100%", "default" ],
                                            "layer": 1
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "rsp_panel": {
                                "type": "stack_panel",
                                "size": [ "100%", "100%c" ],
                                "bindings": [
                                    {
                                        "binding_type": "view",
                                        "source_control_name": "global_rsp_un",
                                        "source_property_name": "#toggle_state",
                                        "target_property_name": "#visible"
                                    }
                                ],
                                "controls": [
                                    {
                                        "empty_panel": {
                                            "type": "panel",
                                            "size": [ 1, 2.5 ]
                                        }
                                    },
                                    {
                                        "asa_my_pack@asa_resource_packs.asa_nav_rps_toggle": {
                                            "$button_text": "My packs",
                                            "radio_toggle_group": false,
                                            "$default_texture": "textures/ui/button_borderless_light",
                                            "$hover_texture": "textures/ui/button_borderless_light",
                                            "$pressed_texture": "textures/ui/button_borderless_lighthover",
                                            "$pressed_no_hover_texture": "textures/ui/button_borderless_lighthover",
                                            "$light_toggle_checked_default_text_color": "$light_toggle_default_text_color",
                                            "$button_type_panel": "asa_resource_packs.asa_rsp_toggle_template",
                                            "size": [ "100%", 25 ]
                                        }
                                    },
                                    {
                                        "empty_panel": {
                                            "type": "panel",
                                            "size": [ 1, 2.5 ]
                                        }
                                    },
                                    {
                                        "asa_rsp_available@asa_resource_packs.unselected_pack_grid": {
                                            "bindings": [
                                                {
                                                    "binding_name": "#available_grid_dimensions_global",
                                                    "binding_name_override": "#collection_length"
                                                },
                                                {
                                                    "binding_type": "view",
                                                    "source_control_name": "asa_my_pack",
                                                    "source_property_name": "#toggle_state",
                                                    "target_property_name": "#visible"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "empty_panel": {
                                            "type": "panel",
                                            "size": [ 1, 2.5 ]
                                        }
                                    },
                                    {
                                        "asa_get_more_packs@asa_resource_packs.asa_nav_rps_toggle": {
                                            "$button_text": "Get more packs",
                                            "radio_toggle_group": false,
                                            "$default_texture": "textures/ui/button_borderless_light",
                                            "$hover_texture": "textures/ui/button_borderless_light",
                                            "$pressed_texture": "textures/ui/button_borderless_lighthover",
                                            "$pressed_no_hover_texture": "textures/ui/button_borderless_lighthover",
                                            "$light_toggle_checked_default_text_color": "$light_toggle_default_text_color",
                                            "$button_type_panel": "asa_resource_packs.asa_rsp_toggle_template",
                                            "size": [ "100%", 25 ]
                                        }
                                    },
                                    {
                                        "empty_panel": {
                                            "type": "panel",
                                            "size": [ 1, 2.5 ]
                                        }
                                    },
                                    {
                                        "unowned_pack_grid@resource_packs.unowned_pack_grid": {
                                            "size": [ "100%", "default" ],
                                            "$unowned_grid_visible_binding_name": "(not #no_unowned_packs_visibility_global)",
                                            "$unowned_grid_visible_binding_type": "global",
                                            "$unowned_pack_items": "#unowned_pack_items_global",
                                            "$unowned_grid_dimensions": "#unowned_grid_dimensions_global",
                                            "bindings": [
                                                {
                                                    "binding_name": "$unowned_grid_dimensions",
                                                    "binding_name_override": "#collection_length"
                                                },
                                                {
                                                    "binding_type": "view",
                                                    "source_control_name": "asa_get_more_packs",
                                                    "source_property_name": "#toggle_state",
                                                    "target_property_name": "#visible"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "to_store_button@common_buttons.light_text_button": {
                                            "size": [ "100%", 20 ],
                                            "$button_text": "resourcePack.suggestedContent.button.viewMore",
                                            "$pressed_button_name": "button.more_suggested_content_offers_global",
                                            "bindings": [
                                                {
                                                    "binding_type": "view",
                                                    "source_control_name": "asa_get_more_packs",
                                                    "source_property_name": "#toggle_state",
                                                    "target_property_name": "#visible"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}