{
    "loom_screen": {
        "force_render_below": true
    },
    
    "toolbar_panel/toolbar_background": {
        "ignored": true
    },

    "right_panel@common.root_panel": {
        "layer": 1,
        "controls": [
            {
                "common_panel@common.common_panel": {
                    "$show_close_button": false
                }
            },
            {
                "asa_ap@asa_auto_place_panel.asa_chest_auto_place_panel": {}
            },
            {
                "invcentory_mode@asa_crafting_panel.asa_inventory_mode_panel": {
                    "offset": [
                        22,
                        0
                    ]
                }
            },
            {
                "inven_debug@asa_inventory_debug.asa_inventory_mode_debug": {
                    "offset": [
                        -6,
                        -2
                    ]
                }
            },
            {
                "loom_screen_inventory": {
                    "type": "panel",
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "asa_inven_normal",
                            "source_property_name": "#toggle_state",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "loom_label@loom.loom_label": {
                                "offset": [
                                    0,
                                    5
                                ]
                            }
                        },
                        {
                            "top_half_panel@loom.top_half_panel": {}
                        },
                        {
                            "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {}
                        },
                        {
                            "hotbar_grid@common.hotbar_grid_template": {}
                        }
                    ]
                }
            },
            {
                "loom_screesfasfasn_inventory": {
                    "type": "panel",
                    "layer": 2,
                    "$button_ref": "asa_drop_one_common.asa_drop_one_slot",
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "asa_inven_drop_one",
                            "source_property_name": "#toggle_state",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "loom_label@loom.loom_label": {
                                "offset": [
                                    0,
                                    5
                                ]
                            }
                        },
                        {
                            "top_half_panel@loom.top_half_panel": {}
                        },
                        {
                            "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {}
                        },
                        {
                            "hotbar_grid@common.hotbar_grid_template": {}
                        }
                    ]
                }
            },
            {
                "loom_screen_asdasinventory": {
                    "type": "panel",
                    "layer": 2,
                    "$button_ref": "asa_auto_place.asa_auto_place_slot",
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "asa_inven_auto_place",
                            "source_property_name": "#toggle_state",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "loom_label@loom.loom_label": {
                                "offset": [
                                    0,
                                    5
                                ]
                            }
                        },
                        {
                            "top_half_panel@loom.top_half_panel": {}
                        },
                        {
                            "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {}
                        },
                        {
                            "hotbar_grid@common.hotbar_grid_template": {}
                        }
                    ]
                }
            }
        ]
    }
}